* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  scroll-behavior: smooth;
  font-family: "Poppins", serif;
}

.container {
  width: 80%;
  margin-inline: auto;
}


/* Navbar */

.navbar {
  padding: 30px 0;
}

.navbar-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.navbar-box .menu {
  display: flex;
  gap: 30px;
  align-items: center;
}

.navbar-box .menu li {
  list-style-type: none;
}

.navbar-box a {
  text-decoration: none;
  color: black;
  font-weight: 700;
}

/* Hero */

.hero-box {
  background-image: linear-gradient(rgba(0, 0, 0, 0.8),
      rgba(0, 0, 0, 0.4)),
    url(/assets/images/IMG-20251007-WA0037.jpg);
  width: 100%;
  border-radius: 15px;
  padding: 100px 20px;
  color: white;
  background-size: cover;
  background-position: center;
}

.hero-box h1 {
  margin-bottom: 20px;
  font-size: 40px;
  /* display: flex;
  justify-content: center;
  text-align: center; */
}

.hero-box p {
  /* display: flex;
  text-align: center; */
  font-size: 17px;
  line-height: 1.8;
  margin-bottom: 50px;
  opacity: 75%;
  font-weight: 500;
}

.hero-box a {
  text-decoration: none;
  color: white;
  /* background-color: white; */
  padding: 10px 20px;
  border-radius: 20px;
  transition: all 0.4s ease;
  border: 3px solid indigo;
  font-size: 15px;
  font-weight: 500;
}

.hero-box a:hover {
  background-color: rgb(100, 0, 171);
}

/* About Me */

.about-me {
  padding: 150px 0;
}

.about-box {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px;
}

.about-box img {
  width: 100%;
  height: 100%;
  border-radius: 20px;
}

.about-box h1 {
  font-size: 40px;
  font-weight: 650;
  margin-bottom: 20px;
}

.about-box p {
  line-height: 2;
  text-align: justify;
}

/* Info About Me */

.about-me .info {
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  flex-wrap: wrap;
  gap: 30px;
  padding-top: 50px;
}

.about-me .info h2 {
  border: 2px solid gray;
  padding: 30px;
  border-radius: 25px;
  transition: all 0.4s ease;
  background-color: indigo;
  color: white;
}

.about-me .info h2 span {
  /* color: white; */
  font-size: 40px;
}

.info h2:hover {
  color: black;
  background-color: white;
}

.jmlh-mrd {
  padding-bottom: 100px;
}

.jmlh-mrd-box {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 21px;
}

.jmlh-mrd-box .box-wali {
  grid-column: 1 / -1;
  margin-bottom: 20px;
}

.jmlh-mrd-box .box {
  display: flex;
  flex-direction: column;
  align-items: center;

}

.jmlh-mrd-box .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 21px;
}

.jmlh-mrd-box .box img {
  width: 100%;
  height: auto;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  border: 2px solid;
}

/* Responsive */

/* Responsive Navbar */
@media (max-width: 992px) {
  .container {
    width: 90%;
  }
}

@media (max-width: 769px) {
  .navbar-box {
    flex-direction: column;
    gap: 20px;
  }

  .navbar-box .menu {
    flex-wrap: wrap;
    justify-content: center;
  }
}

/* Responsive Hero */
@media (max-width: 575px) {
  .hero-box p {
    width: 100%;
  }
}

@media (max-width: 521px) {
  .hero-box h1 {
    font-size: 34px;
  }

  .hero-box p {
    font-size: 14px;
  }
}

/*  Responsive About Me */

@media (max-width: 865px) {
  .about-box {
    grid-template-columns: 1fr;
  }
}